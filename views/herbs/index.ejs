<%- include('../partials/header') %>

    <h1>Herb List</h1>

      <% if (user) {%>
      <% users.herbs.forEach(function(h, idx){ %>
      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src="https://i.imgur.com/nqqvAV2.jpg">
              <span class="card-title"><%= h.name %></span>
            </div>
            <div class="card-content">
              <p>Benefits: <%= h.benefits %></p>
              <p>Uses: <%= h.uses %></p>
            </div>
            <div class="card-action">
              <a href="/herbs/<%= h._id %>">Details</a>
              <form action="/herbs/<%= idx %>?_method=DELETE" method="POST">
                <button type="submit" class="waves-effect waves-light btn-small">Delete</button>
            </form>
            </div>
          </div>
        </div>
      </div>
      <% }); %> 
      <% } %>

</body>
</html>